{
  "name": "Gitindex",
  "description": "Ever wished that using GitHub was as seamless as using your local IDE? Gitindex brings the power of your IDE to GitHub, allowing you to edit files directly on the platform with the same ease and efficiency as you would on your local machine.",
  "version": "0.0.1",
  "manifest_version": 3,
  "browser_specific_settings": {
    "gecko": {
      "id": "mtthsschrbr.gitindex@example.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "documents/hello.html",
    "default_icon": "logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/search*",
        "https://github.com/*/*",
        "https://github.com/"
      ],
      "css": [
        "styles/popup.css",
        "styles/repo.css",
        "styles/logo.css",
        "styles/modal.css"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}